@model IEnumerable<PcollectorV2.Models.Collection>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CollectionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inventory)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CollectionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Inventory.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CollectionID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CollectionID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CollectionID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
